<h2>Cart content</h2>

<ul>
  <%= for cart <- @cart do %>
    <li>
      <%= cart.item %>, <%= cart.quantity %>
      <%= link "edit", to: Routes.cart_path(@conn, :edit, cart) %> -
      <%= link "delete", to: Routes.cart_path(@conn, :delete, cart), method: :delete %>
    </li>
  <% end %>
<ul>

<%= link "Add item", to: Routes.cart_path(@conn, :new) %>
